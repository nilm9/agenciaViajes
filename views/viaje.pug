extends ./layout/index

block contenido
    main.container.mt-5 
        .row 
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="img viaje", class="img-fluid")
            .col-md-7          
                h1= viaje.titulo
                p 
                
                    svg.icon.icon-tabler.icon-tabler-calendar-minus(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        rect(x='4' y='5' width='16' height='16' rx='2')
                        line(x1='16' y1='3' x2='16' y2='7')
                        line(x1='8' y1='3' x2='8' y2='7')
                        line(x1='4' y1='11' x2='20' y2='11')
                        line(x1='10' y1='16' x2='14' y2='16')
                    | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                p
                    svg.icon.icon-tabler.icon-tabler-tag(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        circle(cx='8.5' cy='8.5' r='1' fill='currentColor')
                        path(d='M4 7v3.859c0 .537 .213 1.052 .593 1.432l8.116 8.116a2.025 2.025 0 0 0 2.864 0l4.834 -4.834a2.025 2.025 0 0 0 0 -2.864l-8.117 -8.116a2.025 2.025 0 0 0 -1.431 -.593h-3.859a3 3 0 0 0 -3 3z')
 
                    | #{viaje.precio} $
   
                p 

                    svg.icon.icon-tabler.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        circle(cx='12' cy='7' r='4')
                        path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                    | #{viaje.disponibles} Disponibles
                
                p= viaje.descripcion

